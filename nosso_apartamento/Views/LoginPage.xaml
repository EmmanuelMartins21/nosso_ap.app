<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="nosso_apartamento.Views.LoginPage"
              BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1C1C1E}"
    Title="Entrar">
    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

        <Image Source="icon_app.png"
               WidthRequest="120" 
               HeightRequest="120"
               HorizontalOptions="Center"/>

        <Label Text="Nosso AP"
               FontSize="32"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=#0058D0, Dark=#4285F4}"/>

        <Label Text="Digite a senha para entrar"
               FontSize="15"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=#555, Dark=#CCC}"/>

        <Entry x:Name="SenhaEntry"
               IsPassword="True"
               Placeholder="Senha"
               FontSize="18"
               HeightRequest="50"
               BackgroundColor="{AppThemeBinding Light=#F3F7FF, Dark=#2B2B2B}"
               TextColor="{AppThemeBinding Light=#000, Dark=#FFF}"
               PlaceholderColor="#888"
               Margin="0,20,0,0"
               Keyboard="Numeric"/>

        <Button Text="Entrar"
                CornerRadius="12"
                HeightRequest="50"
                BackgroundColor="{AppThemeBinding Light=#0058D0, Dark=#4285F4}"
                TextColor="White"
                Command="{Binding LoginCommand}"/>

    </VerticalStackLayout>
</ContentPage>