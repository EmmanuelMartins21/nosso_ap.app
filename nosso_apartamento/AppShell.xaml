<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="nosso_apartamento.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:nosso_apartamento"
    xmlns:pages="clr-namespace:nosso_apartamento.Views"
    Shell.NavBarIsVisible="False">
    
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate pages:LoginPage}" />

    <ShellContent
        Route="home"
        ContentTemplate="{DataTemplate pages:HomePage}" />

    <ShellContent
        Route="listaCompras"
        ContentTemplate="{DataTemplate pages:ListaComprasPage}" />

</Shell>
